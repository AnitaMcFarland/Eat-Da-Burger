<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img src="/assets/img/burger.jpeg" alt="Eat-Da-Burger">
	        <h1>Eat-Da-Burger</h1>
	        <p></p>
	    </div>
  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form>
			          <input type="hidden" name="devoured" value="true">
			          <button id="{{id}}" class="btn-primary devour" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/burger/create" method="POST">

			  <div class="form-group">
			    <p>Enter a burger you want to order and click the Submit Order button.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>

<script>
    $(".devour").on("click", function(e){
        e.preventDefault();
        console.log(this.id);
        $.ajax({
            method: "PUT",
            url: "/burger/update/" + this.id,
            data: {
                devoured: true
            }
        }).then(function(res){
            window.location.reload();
        });
    })
</script>
